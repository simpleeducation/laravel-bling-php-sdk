{
    "name": "simpleeducation/laravel-bling-php-sdk",
    "description": "Biblioteca de integração com o Bling",
    "type": "library",
    "require": {
        "php": "^7.1.3",
        "ext-curl": "*",
        "ext-json": "*",
        "lib-curl": "*",
        "lib-openssl": "*",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "*",
        "squizlabs/php_codesniffer": "3.*"

    },
    "scripts": {
        "cs-fix": [
            "php-cs-fixer fix --using-cache=no --rules=@PSR2 ./src"
        ],
        "cs-snif": [
            "phpcs -p --standard=PSR2 ./src"
        ],
        "cs-beauty": [
            "phpcbf -p --standard=PSR2 ./src"
        ]
    },
    "autoload": {
        "psr-4": {
            "Bling\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bling\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mayron Alves",
            "email": "mayroonalves@gmail.com"
        }
    ]
}
